<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".view.ScaleMainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="70dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_activity_scale_main_sname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:text="@string/test_text"
                android:textSize="20sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_activity_scale_main_scontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_activity_scale_main_sname"
                android:layout_margin="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_activity_scale_main_sremarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_activity_scale_main_scontent"
                android:layout_margin="5dp"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_activity_scale_main_start_scale"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/scrollView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp"
        android:background="@drawable/btn_strat_scale_seletor"
        android:text="@string/start_scale"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>