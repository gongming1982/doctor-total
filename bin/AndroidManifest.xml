                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jmgff.xu.doctortotal.view.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.jmgff.xu.doctortotal.view.ScaleMainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.jmgff.xu.doctortotal.view.QuestionActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.jmgff.xu.doctortotal.view.ResultActivity"
            android:screenOrientation="portrait" >
